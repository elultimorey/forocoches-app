<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.elultimorey.forocoches"
    android:versionCode="20"
    android:versionName="@string/app_version" >

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="4" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/icono"
        android:label="@string/app_name" >
        <activity
            android:name="es.elultimorey.forocoches.ForoCochesActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.elultimorey.forocoches.AboutActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/acerca_activity" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.elultimorey.forocoches.PreferencesActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="Preferencias de Forocoches App" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="es.elultimorey.forocoches.AyudaActivity"
            android:configChanges="keyboard|keyboardHidden|orientation"
            android:label="@string/ayuda_activity" />
    </application>

</manifest>